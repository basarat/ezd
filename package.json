    "ts-node": "5.0.1",
    "typescript": "2.7.2",
    "webpack": "3.5.6"
  },
  "devDependencies": {
    "@types/escape-html": "0.0.19",
    "@types/fs-extra": "5.0.1",
    "@types/highlight.js": "9.1.9",
    "@types/react": "16.0.40",
    "@types/react-dom": "16.0.4",
    "@types/webpack": "3.8.10",
    "csstips": "0.2.2",
    "escape-html": "1.0.3",
    "expandible": "0.1.3",
    "gh-pages": "0.11.0",
