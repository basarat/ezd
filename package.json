{
  "name": "eze",
  "version": "0.9.2",
  "description": "Eze demos / docs for Component / Styleguide authors",
  "main": "lib/index.js",
  "types": "lib/index",
  "bin": {
    "eze": "./bin/eze"
  },
  "repository": "https://github.com/basarat/eze.git",
  "scripts": {
    "docs": "eze ./src/docs/main.tsx",
    "docs:live": "npm run docs -- --serve",
